{%- block form_row -%}
  {% set class = '' %}
  {% if form.vars.attr.class is defined %}
    {% set class = form.vars.attr.class %}
  {% endif %}
  <div class="form-row {{ class }} form-row-{{ form.vars.id|lower|replace({'_' : '-'}) }}">
    {{- form_label(form) -}}
    {{- form_errors(form) -}}
    {{- form_widget(form) -}}
  </div>
{%- endblock form_row -%}

{%- block form_errors -%}
  {%- if errors|length > 0 -%}
    <div class="form-errors">
      <ul class="list">
        {%- for error in errors -%}
          <li class="list-item">{{ error.message }}</li>
        {%- endfor -%}
      </ul>
    </div>
  {%- endif -%}
{%- endblock form_errors -%}